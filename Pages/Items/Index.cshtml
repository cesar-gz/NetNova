@page
@using NetNova
@model NetNova.Pages.Items.IndexModel
@{
  ViewData["Title"] = "Items";
}

<h1>Items</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var item in Model.Items)
    {
      <tr>
        <td>@item.Name</td>
        <td>@item.Description</td>
      </tr>
    }
  </tbody>
</table>
